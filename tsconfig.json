{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "CommonJS",
    "strict": true,
    "jsx": "react",
    "baseUrl": "src",
    "target": "es5",
    "moduleResolution": "node",
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "typeRoots": [
      "src/global.d.ts"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
